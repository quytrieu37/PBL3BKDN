@model PBL3Store.UI.Models.AccountUpdateInfoModel
@{
    ViewBag.Title = "UpdateInfo";
    Layout = "~/Views/Layout/CustomerInfo.cshtml";
}

<h2>Cập nhật thông tin tài khoản</h2>

<div class="row">
    <div class="col-12 col-md-8">
        @using (Html.BeginForm("UpdateInfo", "Account", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(x => x.PhoneNumber)
                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                <p class="text-danger">@Html.ValidationMessageFor(x => x.PhoneNumber)</p>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Address)
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                <p class="text-danger">@Html.ValidationMessageFor(x => x.Address)</p>
            </div>
            <button type="submit" class="btn btn-outline-primary">Cập nhật thông tin</button>
        }
    </div>
</div>
@section js{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
}