@model PBL3Store.UI.Models.AdminBookRevenueModel
@{
    ViewBag.Title = "BookRevenue";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<div style="display: flex;">
    <h2>BookRevenue</h2>
    <a href="@Url.Action("BookRevenue","Admin", new { status = 2})" class="btn btn-outline-info"><i class="fas fa-sort-amount-up"></i></a>
    <a href="@Url.Action("BookRevenue","Admin", new { status = 1})" class="btn btn-outline-info"><i class="fas fa-sort-amount-down-alt"></i></a>
    <a href="@Url.Action("BookRevenue","Admin", new { status = 0})" class="btn btn-outline-info"><i class="fas fa-adjust"></i></a>
</div>
@{
    int i = 0;
}

<table class="table table-bordered" style="font-weight:700">
    <tr>
        <td>STT</td>
        <td>Mã Sách</td>
        <td>Tên sách</td>
        <td>Giá Tiền</td>
        <td>Số lượng bán ra</td>
    </tr>
    @foreach (var book in Model.BookRevenues)
    {
        i++;
        <tr>
            <td>@i</td>
            <td><a href="@Url.Action("BookView","Admin", new { id= book.BookId})" style="text-decoration:none; color: #000000">@book.BookId</a></td>
            <td><a href="@Url.Action("BookView","Admin", new { id= book.BookId})" style="text-decoration:none; color: #000000">@book.BookName</a></td>
            <td>@book.Price</td>
            <td>@book.Quantity</td>
        </tr>
    }
</table>