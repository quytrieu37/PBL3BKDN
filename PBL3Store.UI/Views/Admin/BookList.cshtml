@model PBL3Store.UI.Models.AdminBookListModel
@{
    ViewBag.Title = "BookList";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h1>Danh sách sách</h1>
@{ 
    int i = 0;
}
<table class="table table-bordered" style="font-weight:700">
    <tr>
        <td>STT</td>
        <td>Mã Sách</td>
        <td>Tên sách</td>
        <td>Doanh mục</td>
        <td>Tùy chọn</td>
    </tr>
    @foreach(var book in Model.Books)
    {
        i++;
        <tr>
            <td>@i</td>
            <td>@book.BookId</td>
            <td>@book.BookName</td>
            <td>@book.Category.CategoryName</td>
            <td>
                <a href="@Url.Action("BookView","Admin", new { id = book.BookId})" class="btn btn-outline-primary"><i class="far fa-eye"></i></a>
                <a href="#" class="btn btn-outline-info"><i class="far fa-edit"></i></a>
                <a href="#" class="btn btn-outline-danger"><i class="fas fa-minus-circle"></i></a>
            </td>
        </tr>
    }
</table>

