@model PBL3Store.Domain.Cart.Cart

<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false" id="cartMain">
    <i class="fas fa-shopping-cart orange"></i>
    @if (Model.lines.Count() > 0)
    {
        <span>
            @Model.lines.Count()
        </span>
    }
</a>
<div class="dropdown-menu">
    @if (Model.lines.Count() > 0)
    {
        foreach (var line in Model.lines)
        {
            <a class="dropdown-item" href="@Url.Action("BookDetail", "Home", new { BookId = line.Book.BookId})">
                <img src="@line.Book.BookImage" alt="@line.Book.BookName" class="img-fluid" width="50"/>
                @line.Book.BookName (@line.Quantity)
            </a>
        }
    }
    <div class="dropdown-divider"></div>
    <a class="dropdown-item" href="@Url.Action("Index", "Cart")">Đến giỏ hàng</a>
</div>