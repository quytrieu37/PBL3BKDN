@model PBL3Store.UI.Models.CartCheckoutModel
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Layout/LayoutMain.cshtml";
}

<div class="border-bottom">
    <h3>Vui lòng điền thông tin mua hàng</h3>
</div>
<div class="row">
    <div class="col-12 col-md-8 ml-5">
        @using (Html.BeginForm("Checkout", "Cart", FormMethod.Post, new { }))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(x => x.paymentId)
                @Html.DropDownListFor(x=>x.paymentId , new SelectList(ViewBag.PaymentMethod, "PaymentId", "PaymentName"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Note)
                @Html.TextAreaFor(x => x.Note, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">Đặt hàng</button>
        }
    </div>
    <div class="col-12 col-md-4">

    </div>
</div>


@section js{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
}
