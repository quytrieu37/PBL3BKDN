@model PBL3Store.UI.Models.AccountRegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "";
}
<link href="~/Content/RegisterStyle.css" rel="stylesheet" />
<script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" data-auto-replace-svg="nest"></script>
<div>
    <div>
        <h1>
            Đăng kí tài khoản
        </h1>
    </div>
    <div class="register">
        <div class="left-register">
            <h2>OFFICIAL</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
        </div>
        <div class="form-register">
            <div>
                <div>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { }))
                    {
                        <div>
                            @Html.ValidationSummary(true)
                            <div class="form-group">

                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" ,
                               placeholder = "User Name"})
                                <p class="text-danger">
                                    @Html.ValidationMessageFor(x => x.UserName)
                                </p>
                            </div>
                            <div class="form-group">

                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" , placeholder = "Password" })
                                <p class="text-danger">
                                    @Html.ValidationMessageFor(x => x.Password)
                                </p>
                            </div>
                            <div class="form-group">

                                @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", type = "password",
                               placeholder = "Confirm Password" })
                                <p class="text-danger">
                                    @Html.ValidationMessageFor(x => x.ConfirmPassword)
                                </p>
                            </div>
                            <div class="form-group">

                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" , placeholder = "Email" })
                                <p class="text-danger">
                                    @Html.ValidationMessageFor(x => x.Email)
                                </p>
                            </div>
                            <button class="btn btn-outline-primary">Đăng kí</button>
                        </div>
                    }
                </div>
                <div>
                    <p>Fast Signup With Your Favourite Social Profile</p>
                </div>
                <div>
                    <div class="icon-contact">
                        <div class="face"><a href="#"><i class="fab fa-facebook-f" style="color: #FFF;"></i></a></div>
                        <div class="yt"><a href="#"><i class="fab fa-youtube" style="color: #FFF;"></i></a></div>
                        <div class="tw"><a href="#"><i class="fab fa-twitter" style="color: #FFF;"></i></a></div>
                        <div class="gg"><a href="#"><i class="fab fa-google-plus-g" style="color: #FFF;"></i></a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <p>© 2017 Official Signup Form. All Rights Reserved | <a href="@Url.Action("HomePage","Home")">Back To Home</a>| <a href="@Url.Action("Login","Account")">Login</a></p>
    </footer>
</div>

@section js{
    <script src="~/Scripts/jquery.validate.min.js"></script>
}