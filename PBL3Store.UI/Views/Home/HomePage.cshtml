@model PBL3Store.UI.Models.HomeListBookModel
@{
    ViewBag.Title = "HomePage";
    Layout = "~/Views/Layout/LayoutMain.cshtml";
}

<h2>Trang chủ</h2>
<div class="row">
    <div class="col-12">
        <div class="card-deck mb-3 mr-3 text-center">
            @foreach (var book in Model.Books)
            {
                <div class="col-12 col-md-3">
                    @Html.Partial("_ProductSummary", book)
                </div>
            }
        </div>
    </div>
    <div class="col-12">
        <div class="col-12 col-md-6">
            @Html.Paging(Model.pagingInfo,
           x=>Url.Action("HomePage", "Home", new {page = x, pageSize= Model.pagingInfo.PageSize }))
        </div>
    </div>
</div>


@section js {
    <script>
        console.log("trang chu");
    </script>
}
