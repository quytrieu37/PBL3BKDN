@model PBL3Store.Domain.Book

<div class="card mb-4 shadow-sm" style=" width: 250px; height: 400px">
    <div class="card-body">
        <a href="@Url.Action("BookDetail", "Home", new { BookId = Model.BookId})">
            <img src="@Model.BookImage" style="max-width: 200px; height: 250px" />
            <p class="card-title pricing-card-title">@Model.BookName</p>
        </a>
    </div>
</div>

